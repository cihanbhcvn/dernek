@page "/register"
@using Entities.Concrete
@using WebUI.Services
@inject IDataService<Member> MemberService

<PageTitle>Member ZAFER</PageTitle>

<h1>MEMBER REGISTER zafer </h1>

<div class="mw-100" style="background-color:RED; color:red; ">
    <DxFormLayout CssClass="w-100" Data="_information">
        <DxFormLayoutItem Caption="First Name:">
            <DxTextBox @bind-Text="@_information.FirstName" />  
        </DxFormLayoutItem>
        <DxFormLayoutItem Caption="Last Name:">
            <DxTextBox @bind-Text="@_information.FirstName" />
        </DxFormLayoutItem>
        <DxFormLayoutItem Caption="Email:">
            <DxTextBox @bind-Text="@_information.Email" />
        </DxFormLayoutItem>
        <DxFormLayoutItem Caption="Years Worked:">
            <DxTextBox @bind-Value="@_information.PhoneNumber" />
        </DxFormLayoutItem>
        <DxFormLayoutItem Caption="Birth Date:">
            <DxDateEdit @bind-Date="@_information.DateOfBirth" Mask="@DateTimeMask.ShortDate" NullValue="@DateTime.Today" ShowDropDownButton="true"  />
        </DxFormLayoutItem>
    </DxFormLayout>
</div>

@code {
    public Information _information = new Information();

    

    public class Information
    {
        public string FirstName { get; set; }
        public string LastName { get; set; }
        public string PhoneNumber { get; set; }
        public string Email { get; set; }
        public DateTime DateOfBirth { get; set; }
    }
}
